<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:gravity="center"
        android:weightSum="2"
     >


        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CRICKET"
        android:textSize="45dp"
        android:padding="15dp"
        android:textColor="#f00"
         android:fontFamily="cursive"
            android:layout_weight="1"
        />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/cricket"
            android:layout_weight="1"
            android:padding="15dp"
            />
        </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Team A" />

            <TextView
                android:id="@+id/teamAScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Team A Score" />
            <Button
                android:id="@+id/active_teamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ðŸ‘‰Activate Team A " />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#800080"
                android:textColor="#fff"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="ðŸ‘‡ADD RUN" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            android:weightSum="2">

                <Button

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/team_a_decrease"
                    android:layout_weight="1"
                    android:text="-" />


                <Button

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/team_a_increase"
                    android:layout_weight="1"
                    android:text="+" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Team B"
                android:textStyle="bold"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/teamBScore"
                android:text="Team B Score" />
            <Button
                android:id="@+id/active_teamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ðŸ‘‰Activate Team B " />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#800080"
                android:textColor="#fff"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="ðŸ‘‡ADD RUN" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/team_b_decrease"
                    android:layout_weight="1"/>


                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/team_b_increase"
                    android:text="+"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"

        >

        <RadioGroup
            android:id="@+id/scoreChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"

            android:checkedButton="@id/score_1"
            android:gravity="center">

            <RadioButton
                android:id="@+id/score_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Wide Ball : 1 Score" />

            <RadioButton
                android:id="@+id/score_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Boundary : 4 Score" />

            <RadioButton
                android:id="@+id/score_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sixer  :         6 Score" />
        </RadioGroup>




    </TableRow>
    <TableRow>
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addSpecialScore"
            android:text="Hit For Special Score"
            android:padding="15dp"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/result"
            android:padding="15dp"
            android:layout_marginLeft="35dp"
            android:background="#ff7f50"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
    </TableRow>
    <TableRow
        >
        <TextView
            android:textColor="#fff"
            android:background="#800080"
            android:padding="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setRules"
            android:layout_marginLeft="20dp"
            />
    </TableRow>

</TableLayout>


</androidx.core.widget.NestedScrollView>